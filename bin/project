#!/bin/bash
mkdir -p ~/projects

if [[ $# -ge 1 ]]; then
  project_name=$1
else
  project_name=$(find ~/projects -maxdepth 1 -mindepth 1 -type d |\
    awk -F/ '{print $NF}' |\
    fzf |\
    tail -n1)
fi
if [[ -z $project_name ]]; then
  exit -1
fi

cd ~/projects/"$project_name" || exit
session_finder "${project_name//\./-}"
