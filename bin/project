#!/bin/bash
mkdir -p ~/projects

if [[ $# -ge 1 ]]; then
  project_name=$1
else
  project_name=$(ls ~/projects |\
    fzf --print-query |\
    tail -n1)
fi
if [[ -z $project_name ]]; then
  exit -1
fi

cd ~/projects
if [[ ! -d $project_name ]]; then
  echo Starting project $project_name
  mkdir $project_name
  cd $project_name
  if type start_project > /dev/null; then
    start_project $2
  else
    git init
  fi
fi
cd ~/projects/$project_name
if [ -d "$PROJECT_ROOT" ]; then
  cd "$PROJECT_ROOT"
fi
session_finder $project_name
