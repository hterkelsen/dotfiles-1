#!/bin/bash

if [[ $# -gt 0 ]]; then
  session=$1
  shift
  if (! tmux ls -F "#{session_name}" | grep "^$session$" 2>/dev/null); then
    TMUX="" tmux -2 new -s "$session" -d $@
  fi
else
  session=$(tmux ls -F "#{session_name}" | fzf)
fi

if [ -z "$session" ]; then
  exit -1
fi

if [[ -n $TMUX ]]; then
  tmux switch-client -t "$session"
else
  tmux -2 a -t "$session" -d
fi
